<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/channelPageBg"
    tools:context=".ChannelPage">

    <ImageView
        android:id="@+id/background"
        android:layout_width="423dp"
        android:layout_height="187dp"
        android:layout_marginBottom="-130dp"
        android:contentDescription="@string/notification_icon"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_background" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="270dp"
        android:layout_marginBottom="28dp"
        android:contentDescription="@string/logo_icon"
        app:layout_constraintBottom_toBottomOf="@+id/background"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logo" />

    <ImageView
        android:id="@+id/notification"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="28dp"

        android:layout_marginBottom="30dp"
        android:contentDescription="@string/notification_icon"
        app:layout_constraintBottom_toBottomOf="@+id/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.713"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_notification" />

    <ImageView
        android:id="@+id/photo"
        android:layout_width="32dp"
        android:layout_height="28dp"
        android:layout_marginEnd="71dp"
        android:contentDescription="@string/logo_icon"
        app:layout_constraintBottom_toBottomOf="@+id/notification"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toEndOf="@+id/notification"
        app:layout_constraintTop_toTopOf="@+id/notification"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/photo" />

    <ImageView
        android:id="@+id/menu"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/logo_icon"
        app:layout_constraintBottom_toBottomOf="@+id/photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/photo"
        app:srcCompat="@drawable/menu" />

    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:contentDescription="@string/channel_text"
        android:text="@string/back"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/channelPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:contentDescription="@string/channel_text"
        android:text="@string/tourism"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/back"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="13dp"
        android:layout_height="19dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="-20dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/background"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/channelPageImage1"
        android:layout_width="368dp"
        android:layout_height="232dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/app_name"
        android:transitionName="channelImage1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:srcCompat="@drawable/tourism1" />

    <ImageView
        android:id="@+id/channelPageImage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/channelPageImage1"
        app:srcCompat="@drawable/tourism2" />

    <ImageView
        android:id="@+id/channelPageImage3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/channelPageImage2"
        app:srcCompat="@drawable/tourism3" />

    <TextView
        android:id="@+id/channelPageText2"
        android:layout_width="150dp"
        android:layout_height="66dp"
        android:layout_marginStart="30dp"
        android:text="@string/tourism2_text"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="@+id/channelPageImage2"
        app:layout_constraintStart_toEndOf="@+id/channelPageImage2"
        app:layout_constraintTop_toTopOf="@+id/channelPageImage2" />

    <TextView
        android:id="@+id/channelPageText3"
        android:layout_width="146dp"
        android:layout_height="74dp"
        android:layout_marginStart="30dp"
        android:text="@string/tourism3_text"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="@+id/channelPageImage3"
        app:layout_constraintStart_toEndOf="@+id/channelPageImage3"
        app:layout_constraintTop_toTopOf="@+id/channelPageImage3" />

    <TextView
        android:id="@+id/channelPageText1"
        android:layout_width="233dp"
        android:layout_height="44dp"
        android:layout_marginStart="70dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/tourism1_text"
        android:textColor="@color/white"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="@+id/channelPageImage1"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>